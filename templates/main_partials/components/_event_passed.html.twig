<li class="grid-item">
    <a href="{{ path('blog_index', { 'id': event.id, 'is_passed': true }) }}" class="card border-0 border-radius-30px main-card-container-last-event activity-card">
        <div class="blog-image">
            <img src="{{ customAsset('app/home/banner/banner.jpg') }}" alt="" />
        </div>
        <div class="card-body p-7">
            {# <div  class="card-title mb-15px alt-font fw-600 fs-20 text-dark-gray d-inline-block">Build up healthy habits and strong peaceful life</div>
            <p>Lorem ipsum has been industry standard dummy text ever...</p>
            <div class="author d-flex justify-content-center align-items-center position-relative overflow-hidden fs-16">
                <div class="me-auto">
                    <span class="d-inline-block">30 Septembre 2024</span>
                </div>
                <div class="like-count fs-15 fw-600">
                    <div style="height:70px;width:70px;" class="d-flex align-items-center justify-content-center feature-box-icon bg-base-color border-radius-3px p-2 ms-2">
                        <img style="width: 40px;" src="{{ customAsset('app/randonnee.png')}}" alt="">
                    </div>
                </div>  
            </div> #}
            <div class="d-flex">
                <div style="width:50px;" class="col-6 pe-sm-0 me-3">
                    <div style="height:50px;background-color:{{event.activity.color}}" class="d-flex align-items-center justify-content-center feature-box-icon border-radius-50 p-2">
                        {% if event.activity.pictureType == "image" %}
                            <img class="my-2" style="width: 28px;" src="{{ customAsset('app/' ~ event.activity.picture )}}" alt="">
                        {% else %}
                            <i class="{{ event.activity.picture }} align-middle icon-medium icon-extra-large text-white my-3"></i>
                        {% endif %}
                    </div>
                    <div class="event-distance px-1">
                        {% if event.eventDistance != null %}
                            {{event.eventDistance}} Km
                        {% endif %}
                    </div>
                </div>
                
                <div class="w-100">
                    <span class="fs-16 lh-30 ls-minus-05px d-block text-dark-gray fw-600">{{event.dateStartAt|format_date('medium',  locale= 'fr')}}</span> 
                    <span class="fs-14 mb-15px d-inline-block fw-600">{{event.activity.name|capitalize}}</span>
                </div>
            </div>
            <div class="fs-14 w-100 d-flex align-items-center ">
                <i class="feather icon-feather-map-pin me-5px"></i>{{event.cityPlace}}
            </div>
        </div>
    </a>
</li>