{% extends 'base.html.twig' %}

{% block title %}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin=""/>
    <link href='https://api.mapbox.com/mapbox.js/plugins/leaflet-fullscreen/v1.0.1/leaflet.fullscreen.css' rel='stylesheet' />

<style>

    #map {
        height: 300px!important;
    }

    {# .fc-more-popover{
        display: none!important;
    } #}

    /* Styles pour la modale */
    .modal {
        background-color: rgba(0, 0, 0, 0.5);
    }

    .btn.btn-small{
        max-width: 200px;
    }

    .close:hover, .close:focus {
        color: black;
        text-decoration: none;
        cursor: pointer;
    }

    .fade:not(.show) {
        opacity: inherit!important;
    }

    /* Loader Dots */
    #loader-container{
        position: fixed;
        top: 0;
        right: 0;
        bottom: 0;
        z-index: 99999;
        left: 0;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .loader-dots {
        display: flex;
        justify-content: space-around;
        align-items: center;
        width: 60px;
        margin: 0 auto;
    }

    .dot {
        width: 10px;
        height: 10px;
        background-color: var(--base-color);
        border-radius: 50%;
        animation: bounce 1.5s infinite;
    }

    .dot:nth-child(2) {
        animation-delay: 0.3s;
    }

    .dot:nth-child(3) {
        animation-delay: 0.6s;
    }

    @keyframes bounce {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-15px);
        }
    }

    {# JS CALENDAR #}
    {# .fc .fc-daygrid-event-harness-abs {
        visibility: visible!important;
        top: -1px!important;
        left: 0px!important;
        right: 0px;
    }
    .fc-daygrid-day-bottom{
        margin-top: -1px!important;
    }
    .fc-daygrid-more-link.fc-more-link{
        background-color: transparent;
        color: white;
        z-index: 9;
        pointer-events: none;
        border: 1px solid transparent!important;
    }
    .fc-event-title-container{
        max-height: 16px;
    }
    .fc-daygrid-day{
        cursor: pointer;
    }
    .fc-daygrid-day:hover{
        background-color: #c9c3c3;
        color:white;
    }
    .fc-h-event{
        border: 1px solid transparent!important;
    }
    .event-number {
        color: white;
        padding: 1px; 
        font-weight: bold; 
        position: absolute; 
        bottom: 4px; 
        left: 7px; 
        font-size: 13px;
    }
    .fc-day-disabled .event-number{
        display: none;
        pointer-events: none;
    } #}

    {# .fc-daygrid-day-bottom{
        margin-top: -6px;
        border: 1px solid;
        border-radius: 7px;
    } #}

    .fc-daygrid-more-link.fc-more-link,
    .fc-event.fc-event-start.fc-event-end.fc-event-past.fc-daygrid-event.fc-daygrid-dot-event,
    .fc-event.fc-event-start.fc-event-end.fc-event-future.fc-daygrid-event.fc-daygrid-dot-event{
        border: 1px solid;
        border-radius: 7px;
        width: 100%;
        height: 17px;
        font-size: 13px;
        font-weight: 600;
        background-color: var(--base-color);
        color: white;
        padding-left: 4px !important;
        cursor: default;
    }
    .fc-daygrid-more-link.fc-more-link:hover,
    .fc-event.fc-event-start.fc-event-end.fc-event-past.fc-daygrid-event.fc-daygrid-dot-event:hover,
    .fc-event.fc-event-start.fc-event-end.fc-event-future.fc-daygrid-event.fc-daygrid-dot-event:hover{
        border: 1px solid var(--base-color);
        border-radius: 50%;
        width: 20px;
        height: 20px;
        font-size: 13px;
        font-weight: 600;
        background-color: var(--base-color);
        color: white;
        padding-left: 4px!important;
        cursor: none;
        pointer-events: none;
    }
    .fc-daygrid-day{
        cursor: pointer;
    }
    .fc-daygrid-day:hover{
        background-color: #c9c3c3;
    }
    .fc-daygrid-day-bottom{
        cursor: default;
        pointer-events: none;
    }
    .fc .fc-daygrid-day.fc-day-today {
        background-color: #b2d4ff;
    }

    @media (max-width: 991px) {
        .fc-daygrid-day-bottom{
            margin-top: -9px!important;
        }
    }

</style>
{% endblock %}

