{% extends 'base.html.twig' %}

{% block title %}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin=""/>
    <link href='https://api.mapbox.com/mapbox.js/plugins/leaflet-fullscreen/v1.0.1/leaflet.fullscreen.css' rel='stylesheet' />

<style>

    #map {
        height: 300px!important;
    }

    .fc-more-popover{
        display: none!important;
    }

    /* Styles pour la modale */
    .modal {
        background-color: rgba(0, 0, 0, 0.5);
    }

    .btn.btn-small{
        max-width: 200px;
    }

    {# .modal-content {
        background-color: white;
        margin: 15% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    } #}

    .close:hover, .close:focus {
        color: black;
        text-decoration: none;
        cursor: pointer;
    }

    .fade:not(.show) {
        opacity: inherit!important;
    }

    .event-number {
        color: white;
        padding: 1px; 
        font-weight: bold; 
        position: absolute; 
        bottom: 4px; 
        left: 7px; 
        font-size: 13px;
    }

    .fc-day-disabled .event-number{
        display: none;
        pointer-events: none;
    }

    /* Loader Dots */
    #loader-container{
        position: fixed;
        top: 0;
        right: 0;
        bottom: 0;
        z-index: 99999;
        left: 0;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .loader-dots {
        display: flex;
        justify-content: space-around;
        align-items: center;
        width: 60px;
        margin: 0 auto;
    }

    .dot {
        width: 10px;
        height: 10px;
        background-color: var(--base-color);
        border-radius: 50%;
        animation: bounce 1.5s infinite;
    }

    .dot:nth-child(2) {
        animation-delay: 0.3s;
    }

    .dot:nth-child(3) {
        animation-delay: 0.6s;
    }

    @keyframes bounce {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-15px);
        }
    }


    {# TEST #}
    .fc .fc-daygrid-event-harness-abs {
        visibility: visible!important;
        top: -1px!important;
        left: 0px!important;
        right: 0px;
    }
    .fc-daygrid-day-bottom{
        margin-top: -1px!important;
        width:19px!important;
    }

    .fc-daygrid-more-link.fc-more-link{
        background-color: transparent;
        color: white;
        z-index: 9;
        pointer-events: none;
        border: 1px solid transparent!important;
    }

    .fc-event-title-container{
        max-height: 16px;
    }

    .fc-daygrid-day{
        cursor: pointer;
    }

    .fc-daygrid-day:hover{
        background-color: #c9c3c3;
        color:white;
    }

    .fc-h-event{
        border: 1px solid transparent!important;;
    }

</style>
{% endblock %}

{% block body %}

<body data-mobile-nav-style="classic">

    {{ parent() }}

    <!-- start header -->
	{% include 'blog/partials/_blog_header.html.twig' %}
	<!-- end header -->

    <!-- start section -->
    <section class="top-space-margin bg-very-light-gray">
        <div class="container">
            
            <div class="row justify-content-center mb-3 lg-mb-50px sm-mb-30px">
                <div class="col-lg-12 sm-mb-15px d-flex justify-content-center align-items-center">
                    <h3 class="highlight-separator text-dark-gray alt-font ls-minus-1px fw-700" data-shadow-animation="true" data-animation-delay="1500">
                        Calendrier<span><img src="{{ asset('app/highlight-separator.svg') }}" alt=""></span>
                    </h3>
                </div>
            </div>

            <div id="calendar"></div>
        </div>
    </section>
    <!-- end section -->

    <!-- start footer -->
    {% include 'main_partials/_footer_minimum.html.twig' %}
    <!-- end footer -->

    {% include 'calendar/partials/_map_modal.html.twig' %}

    <div id="loader-container" class="bg-very-light-gray">
        <div class="loader-dots">
            <div class="dot"></div>
            <div class="dot"></div>
            <div class="dot"></div>
        </div>
    </div>

</body>
<!-- end subscription popup -->

{% endblock %}

{% block baseJavascripts %}
    
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
    <script src='https://api.mapbox.com/mapbox.js/plugins/leaflet-fullscreen/v1.0.1/Leaflet.fullscreen.min.js'></script>
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js'></script>

    {% block importmap %}
        {{ importmap(['app', 'base', 'calendar']) }}
    {% endblock %}

{% endblock %}
