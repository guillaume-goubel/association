{% extends 'base.html.twig' %}

{% block title %}
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}

<body data-mobile-nav-style="classic">

    {{ parent() }}

    <!-- start header -->
	{% include 'admin/partials/parts/_header.html.twig' %}
	<!-- end header -->

    <!-- start section -->
    <section class="main-section">
        <div class="container">
            <div class="row">
                
                <div class="col-12 blog-standard md-mb-50px sm-mb-40px">
                    <div class="row blog-details d-flex align-items-center justify-content-between"> 
                        <div class="col-8">
                            {% include 'admin/partials/components/_admin_connexion_infos.html.twig' %}
                            <h5 class="text-dark-gray fw-600 w-80 sm-w-100 mb-5">Administrateurs - Liste</h5>
                        </div>

                        <div class="admin-action col-2 d-flex justify-content-end">
                            <a class="ms-4" href="{{ path('admin_administrator_new') }}"><i class="fa-solid fa-circle-plus align-middle icon-large text-base-color me-2"></i></a>
                        </div>
                        
                    </div>
                </div>

                <form action="" method="get">
                    <div class="col-12 blog-standard mb-2">
                        <div class="row gy-2">
                            <!-- Filtre activité -->
                            <div class="col-12 col-md-6 col-lg-2">
                                <select name="activityChoice" class="form-select form-select-sm" aria-label="Sélectionner une activité">
                                    <option {{ activityChoice == 'all' ? 'selected' : '' }} value="all">Toutes activités</option>
                                    {% for item in activityList %}
                                        <option {{ activityChoice == item.id ? 'selected' : '' }} value="{{ item.id }}">{{ item.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <!-- Filtre créateur -->
                            <div class="col-12 col-md-6 col-lg-3">
                                <select name="adminChoice" class="form-select form-select-sm" aria-label="Sélectionner un créateur">
                                    {# {% if is_granted('ROLE_SUPER_ADMIN') %} #}
                                        <option selected value="all">Tout administrateur</option>
                                    {# {% endif %} #}
                                    {% for admin in adminsList %}
                                        <option {{ adminChoice == admin.id ? 'selected' : '' }} value="{{ admin.id }}">{{ admin.completeNameByLastName }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <!-- Bouton de recherche -->
                            <div class="col-12 col-md-6 col-lg-1 text-center text-md-start">
                                <button style="border-radius:8px;" class="btn btn-very-small btn-transparent-base-color" type="submit">
                                    <i style="font-size:15px; margin-left:0!important;" class="fa-solid fa-magnifying-glass"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </form>

                <div>
                    <div class="pagination-container d-flex justify-content-center">
                        {{knp_pagination_render(admins, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig')}}
                    </div>
                </div>

                <div class="row d-flex justify-content-center mt-4">
                    <div class="col-12 col-md-9" data-anime='{ "el": "childs", "translateY": [15, 0], "opacity": [0,1], "duration": 800, "delay": 200, "staggervalue": 300, "easing": "easeOutQuad" }'>

                        {% if admins is not empty %}
                            {% for admin in admins %}
                                <div class="row border-bottom border-2 border-color-dark-gray pb-50px mb-50px sm-pb-35px sm-mb-35px align-items-center">
                                    {# <div class="col-md-1 text-center text-md-end md-mb-15px">
                                        <div class="fs-16 fw-600 text-dark-gray">{{admin.id}}</div>
                                    </div> #}
                                    <div class="col-md-8 icon-with-text-style-01 md-mb-25px">
                                        <div class="feature-box feature-box-left-icon-middle last-paragraph-no-margin">
                                            
                                            {% if admin.animator != null %}
                                                <div class="feature-box-icon me-50px md-me-35px">
                                                    <img src="https://via.placeholder.com/130x130" class="w-75px" alt=""/>
                                                    <div class="fs-13 fw-600 text-gray">Animateur</div> 
                                                </div>
                                            {% else %}
                                                <div class="feature-box-icon me-50px md-me-35px">
                                                    {# <img src="https://via.placeholder.com/130x130" class="w-75px" alt=""/> #}
                                                    <div style="text-decoration: line-through;" class="fs-13 fw-600 text-light-gray">Animateur </div> 
                                                </div>
                                            {% endif %}

                                            <div class="feature-box-content">
                                                <div class="d-inline-block text-dark-gray fs-20 ls-minus-05px"><span class="fw-700">{{ admin.lastName|capitalize }}</span> {{ admin.firstName|capitalize }} </div><br/>
                                                <div class="d-inline-block text-base-color fs-15 ls-minus-05px">{{ admin.email }}</div><br/>
                                                <div class="d-inline-block text-base-color mb-20px fs-13 ls-minus-05px">
                                                    {% if admin.getIsEnabled == true %}
                                                        <span class="admin-activity-pills bg-success">Activé</span>
                                                    {% else %}
                                                        <span class="admin-activity-pills bg-alert">Désactivé</span>
                                                    {% endif %}
                                                </div>
                                                
                                                <div class="administrator-activies-list w-100 fs-14">
                                                    {% for activity in admin.activitiesByName %}
                                                        <span class="admin-activity-pills" style="background-color:{{ activity.color }}">{{ activity.name }}</span>
                                                    {% endfor %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-4 text-center text-md-end">
                                        <a href="{{ path('admin_administrator_edit', { 'id':admin.id }) }}" class="edit-administrator-btn btn btn-very-small d-table d-lg-inline-block lg-mb-15px md-mx-auto">
                                            <span>
                                                <i class="fa-regular fa-folder-open"></i>
                                            </span>
                                        </a>
                                    </div>
                                </div>
                            {% endfor %}
                        {% else %}
                            <div class="no-matching-search-message">Pas de résultats pour cette recherche</div>
                        {% endif %}

                    </div>
                </div>

            </div>
        </div>
    </section>

    {% include 'main_partials/parts/_footer_minimum.html.twig' %}

</body>

{% endblock %}

{% block baseJavascripts %}
    
    {% block importmap %}
        {{ importmap(['app', 'base', 'admin-administrator']) }}
    {% endblock %}

{% endblock %}
