{% extends 'base.html.twig' %}

{% block title %}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin=""/>
    <link href='https://api.mapbox.com/mapbox.js/plugins/leaflet-fullscreen/v1.0.1/leaflet.fullscreen.css' rel='stylesheet' />
{% endblock %}

{% block body %}

<body data-mobile-nav-style="classic">

    <!-- start header -->
	{% include 'admin/partials/_header.html.twig' %}
	<!-- end header -->

    <!-- start section -->
    <section class="main-section top-space-margin right-side-bar">
        <div class="container">
            <div class="row">
                
                <div class="col-12 blog-standard md-mb-50px sm-mb-40px">
                    <div class="row blog-details d-flex align-items-center"> 
                        <div class="col-10">
                            <div class="entry-meta fs-15">
                                <span>
                                <i class="text-dark-gray feather icon-feather-user"></i>
                                {{ app.user.firstName }} {{ app.user.lastName }}
                                </span>
                                <a href="{{ path('app_logout')}}">Déconnexion</a>
                            </div>
                            <h5 class="text-dark-gray fw-600 w-80 sm-w-100 mb-1">EVENEMENTS</h5>
                        </div>
                        <div class="col-2">
                            <a href="{{ path('admin_event_new') }}"><i class="fa-solid fa-circle-plus align-middle icon-medium text-base-color me-2"></i>Ajouter</a>
                        </div>
                    </div>
                </div>

                <form action="" method="get">
                    <div class="col-12 blog-standard mb-3">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="input-group">
                                    <!-- Élément select -->
                                    <select name="monthChoice" class="form-select form-select-sm me-2" aria-label="Sélectionner une option">
                                        {% for item in months %}
                                            <option value="{{item.month_number}}">{{item.month_name}}</option>
                                        {% endfor %}
                                    </select>
                                    <select name="yearChoice" class="form-select form-select-sm me-2" aria-label="Sélectionner une option">
                                        {% for item in years %}
                                            <option value="{{item.year}}">{{item.year}}</option>
                                        {% endfor %}
                                    </select>
                                    <select name="creatorChoice" class="form-select form-select-sm me-2" aria-label="Sélectionner une option">
                                        {% for item in creators %}
                                            <option value="{{item.user_id}}">{{item.creator}}</option>
                                        {% endfor %}
                                    </select>
                                    <!-- Bouton de recherche -->
                                    <button style="border-radius:8px;" class="btn btn-medium btn-transparent-base-color d-table d-lg-inline-block lg-mb-15px md-mx-auto" type="submit"><i style="font-size:15px;margin-left:0!important;" class="fa-solid fa-magnifying-glass"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

                <div class="row align-items-center justify-content-start pricing-table-style-06 pb-5">

                    {% for event in events %}
                        {% include 'main_partials/_event_card.html.twig' %}
                    {% endfor %}
                    
                </div>

            </div>
        </div>
    </section>
    <!-- end section -->

    {% include 'main_partials/_map_modal.html.twig' %}

    <!-- start footer -->
    {% include 'main_partials/_footer_minimum.html.twig' %}
    <!-- end footer -->

    <!-- start scroll progress -->
    <div class="scroll-progress d-none d-xxl-block">
        <a href="#" class="scroll-top" aria-label="scroll">
            <span class="scroll-text">
                <i class="fa-solid fa-arrow-down-long align-middle icon-large text-base-color"></i>
            </span>
            <span class="scroll-line">
                <span class="scroll-point"></span>
            </span>
        </a>
    </div>
    <!-- end scroll progress -->

</body>

{% endblock %}

{% block baseJavascripts %}
    
    {% block importmap %}
        {{ importmap(['app', 'base', 'admin-event']) }}
    {% endblock %}

{% endblock %}

