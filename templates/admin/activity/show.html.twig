{% extends 'base.html.twig' %}

{% block title %}Activity{% endblock %}

{% block body %}
    <h1>Activity</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ activity.name }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ activity.color }}</td>
            </tr>
            <tr>
                <th>ClassColor</th>
                <td>{{ activity.classColor }}</td>
            </tr>
            <tr>
                <th>ClassColorHover</th>
                <td>{{ activity.classColorHover }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ activity.description }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ activity.picture }}</td>
            </tr>
            <tr>
                <th>Ordering</th>
                <td>{{ activity.ordering }}</td>
            </tr>
            <tr>
                <th>IsEnabled</th>
                <td>{{ activity.isEnabled ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>PictureType</th>
                <td>{{ activity.pictureType }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ activity.type }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ activity.createdAt ? activity.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ activity.updatedAt ? activity.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_activity_index') }}">back to list</a>

    <a href="{{ path('app_admin_activity_edit', {'id': activity.id}) }}">edit</a>

    {{ include('admin/activity/_delete_form.html.twig') }}
{% endblock %}
